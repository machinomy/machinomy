{
  "name": "machinomy",
  "version": "1.4.0",
  "description": "Micropayments in Ether over HTTP",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/machinomy/machinomy.git"
  },
  "scripts": {
    "test_nedb": "NODE_ENV=test ENGINE_NAME=nedb mocha",
    "test_mongo": "NODE_ENV=test ENGINE_NAME=mongo mocha",
    "test": "yarn build; yarn run test_nedb; yarn run test_mongo",
    "build": "tsc -p tsconfig.json",
    "lint": "tslint -t stylish -p '.' -e './node_modules/**/*.ts'",
    "prepublish": "yarn lint && yarn build",
    "doc": "typedoc --ignoreCompilerErrors --out ./documentation --readme README.md --theme ../typedoc-theme index.ts "
  },
  "main": "index.js",
  "bin": {
    "machinomy": "./bin/machinomy.js"
  },
  "types": "index.d.ts",
  "files": [
    "bin/",
    "commands/",
    "contracts/",
    "examples/",
    "lib/",
    "test/",
    "src/",
    "index.d.ts",
    "index.js",
    "index.js.map"
  ],
  "dependencies": {
    "@machinomy/contracts": "^3.0.0",
