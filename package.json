    "@types/sqlite3": "^3.1.3",
    "@types/uuid": "^3.4.3",
    "bignumber.js": "^4.1.0",
    "commander": "^2.9.0",
    "debug": "^3.1.0",
    "ethereumjs-util": "^5.1.5",
    "fetch-ponyfill": "^5.0.1",
    "homedir": "https://github.com/ukstv/node-homedir",
