    "coveralls": "^2.12.0",
    "ethereumjs-testrpc": "^4.1.3",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "nock": "^9.0.9",
    "tmp": "0.0.33",
