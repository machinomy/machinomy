{
  "name": "machinomy",
  "version": "1.9.6",
  "description": "Micropayments powered by Ethereum",
  "author": "Sergey Ukustov <sergey.ukustov@machinomy.com>",
  "license": "Apache-2.0",
  "keywords": [
    "micropayments",
    "ethereum",
    "express"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/machinomy/machinomy.git"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "build:examples": "tsc --project tsconfig.examples.json",
    "prepublish": "yarn lint && yarn build",
    "lint": "tslint --format stylish --project . --exclude './node_modules/**/*.ts'",
    "migrate": "db-migrate up",
    "integration_test": "yarn build && mocha integration_test/**/*.test.js",
    "test_nedb": "ENGINE_NAME=nedb mocha lib/**/*.test.js",
    "test_mongo": "ENGINE_NAME=mongo mocha lib/**/*.test.js",
    "test_postgres": "ENGINE_NAME=postgresql mocha lib/**/*.test.js",
    "test_sqlite": "ENGINE_NAME=sqlite mocha lib/**/*.test.js",
    "test": "exit 0",
    "coverage": "yarn build && nyc --reporter=lcov yarn run test"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/",
    "migrations/",
    "examples/"
  ],
  "dependencies": {
    "@machinomy/contracts": "^4.0.15",
    "@machinomy/types-bn": "^0.0.3",
    "@machinomy/types-truffle-contract": "^0.0.3",
    "@machinomy/types-web3": "^0.0.4",
    "@types/bignumber.js": "^4.0.2",
    "bignumber.js": "^4.1.0",
    "commander": "^2.9.0",
    "debug": "^3.1.0",
    "decko": "^1.2.0",
    "ethereumjs-util": "^5.1.5",
    "fetch-ponyfill": "^6.0.0",
    "homedir": "https://github.com/ukstv/node-homedir",
    "nedb": "^1.8.0",
    "prompt": "^1.0.0",
    "request": "^2.76.0",
    "safe-buffer": "^5.1.2",
    "types-rlp": "^0.0.1",
    "uuid": "^3.2.1",
    "web3": "^0.20.1"
  },
  "peerDependencies": {
    "db-migrate-pg": "^0.3.0",
    "db-migrate-sqlite3": "^0.2.1",
    "mongodb": "^2.2.31",
    "pg": "^7.4.1",
    "sqlite3": "^4.0.0"
  },
  "devDependencies": {
    "@machinomy/hdwallet-provider": "^1.1.0",
    "@machinomy/types-ethereumjs-util": "^0.0.12",
    "@types/body-parser": "^1.16.4",
    "@types/debug": "^0.0.30",
    "@types/expect": "^1.20.3",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.43",
    "@types/mongodb": "^2.2.3",
    "@types/nedb": "^1.8.3",
    "@types/nock": "^8.2.1",
    "@types/node": "^10.0.0",
    "@types/pg": "^7.4.5",
    "@types/request": "^2.0.13",
    "@types/sinon": "^4.1.3",
    "@types/sqlite3": "^3.1.3",
    "@types/tmp": "^0.0.33",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.15.2",
    "coveralls": "^3.0.0",
    "db-migrate": "^0.10.2",
    "db-migrate-pg": "^0.3.0",
    "db-migrate-sqlite3": "^0.2.1",
    "expect": "^22.3.0",
    "express": "^4.14.0",
    "ganache-cli": "^6.0.3",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "mongodb": "^2.2.31",
    "nock": "^9.0.9",
    "nyc": "^11.8.0",
    "pg": "^7.4.1",
    "sinon": "^4.1.5",
    "sqlite3": "^4.0.0",
    "tmp": "0.0.33",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3"
  }
}
